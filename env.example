# Audio Noise Cleanup SaaS Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# AssemblyAI API Key (for professional audio processing)
# Get your free API key at: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Optional: OpenAI API Key (for additional speech enhancement)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: AWS S3 Configuration (for cloud storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# Optional: Database Configuration (for user management)
# DATABASE_URL=your_database_connection_string

# Security
# JWT_SECRET=your_jwt_secret_key
# SESSION_SECRET=your_session_secret

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=10

# File Upload Limits
# MAX_FILE_SIZE=104857600
# UPLOAD_TIMEOUT=300000

# Logging
# LOG_LEVEL=info 